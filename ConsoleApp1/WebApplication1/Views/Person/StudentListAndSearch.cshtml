@*@model List<StudentViewModel>*@
@model ReflectionIT.Mvc.Paging.PagingList<StudentViewModel>
@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging

@{
    ViewData["Title"] = "StudentListAndSearch";
}
@section Scripts{
    <script src="~/js/Education/student.js"></script>
}

<h1 style="display:flex; justify-content:center; align-items:center">Student Page</h1>


<div class="container mb-5" >

    <form asp-action="StudentGrantByGpa" method="post">
        <p>
            <b style="margin: 10px;"> Select: </b>
            @Html.RadioButton("select", "issueGrant") <text class="marginForText">Выдать Грант</text>
            @Html.RadioButton("select", "сancelGrant") <text class="marginForText">Забрать Грант</text>

        </p>
        <br />
        <p>
            <input type="number"
                   placeholder="Enter GPA..."
                   min="0.0"
                   max="4.0"
                   step="0.1"
                   value="@ViewData["minGpaValue"]"
                   name="minGpaValue"
                   style="width:300px;" />

            <input type="submit" value="OK" class="btn btn-primary" style="margin-left:15px" />

        </p>
    </form>
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }

    <form asp-action="StudentListAndSearch" method="get">

        <p>
            <b style="margin: 10px;"> Search By: </b>
            @Html.RadioButton("searchBy", "iin") <text class="marginForText">IIN</text>
            @Html.RadioButton("searchBy", "name") <text class="marginForText">Name</text>
            @Html.RadioButton("searchBy", "courseYear") <text class="marginForText">Course Year</text>
            @Html.RadioButton("searchBy", "universityID") <text class="marginForText">University ID</text>

        </p>
        <br />
        <p>
            <input type="search"
                   placeholder="Search Student..."
                   value="@ViewData["GetStudentDetails"]"
                   name="searchStudent"
                   style="width:300px;" />

            <input type="submit" value="Search" class="btn btn-primary" style="margin-left:15px" />

            <a class="btn btn-primary" style="margin-left:15px" asp-action="StudentList">Get All Students</a>
        </p>
    </form>

    <a class="btn btn-primary" style="margin-left:15px" asp-action="AddNewStudent">Add New Student</a>


    <table border="1" class="table">
        <thead>
            <tr>
                <th scope="col">IIN</th>
                <th scope="col">FIO</th>
                <th scope="col">Course Year</th>
                <th scope="col">University ID</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr class="user">

                        <td>
                            @Html.ActionLink(@item.IIN, "StudentFullInfo", new { IINStudent = item.IIN })
                        </td>
                        <td>@item.Surname @item.Name @item.Patronymic </td>
                        <td> @item.CourseYear </td>
                        <td> @item.UniversityId </td>
                        @if (item.OnGrant == false)
                        {
                            <td>

                                <button class="btn btn-light" type="submit">@Html.ActionLink("Выдать грант", "StudentGrantIndividual", "Person", new { IDStudent = item.Id })</button>

                            </td>
                        }
                        else
                        {
                            <td>
                                <button class="btn btn-light" type="submit">@Html.ActionLink("Забрать грант", "StudentGrantIndividual", "Person", new { IDStudent = item.Id })</button>
                            </td>
                        }

                        @* TODO: Implement these buttons work*@

                        <td>
                            <button class="btn btn-light edit" type="submit">@Html.ActionLink("EDIT", "AddNewStudent", "Person", new { IDStudent = item.Id })</button>
                        </td>

                        <td>
                            <input class="btn btn-light deleteStudent" data-name="@item.IIN" type="button" value="Delete" />
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>


    <nav aria-label="nav example">
        @if (this.Model != null)
        {
            @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
            //<vc:pager paging-list="@Model" />
        }

    </nav>

</div>

<style>
    .marginForText {
        margin-right: 25px;
    }

    ul.pagination li {
        margin: 10px;
    }
</style>
