@{ 
    ViewData["Title"] = "Book ticket";
    Layout = "~/Views/Shared/Airport/_LayoutAirport.cshtml";
}
@model WebApplication1.EfStuff.Model.Airport.DepartingFlightInfo
<div class="container justify-content-md-center">
    <div class="row-auto">
        <div class="col">
            <table id="flights-table" class="table">
                <thead>
                    <tr>
                        <th scope="col">Рейс</th>
                        <th id="place" scope="col">Куда</th>
                        <th scope="col">Время отбытия</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Авиакомпания</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>@Model.FlightId</th>
                        <td>@Model.Destination</td>
                        <td>@Model.DepartureTime</td>
                        <td>@Model.Status</td>
                        <td>@Model.Airline</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row-auto">
        <form method="post" action="@Url.Action("BookTicket", "Airport")">
            <div class="input-group mb-3">
                <span class="input-group-text">Имя</span>
                <input type="text" class="form-control" placeholder="Имя" aria-label="Username">
                <span class="input-group-text">Фамилия</span>
                <input type="text" class="form-control" placeholder="Фамилия" aria-label="Server">
                <input class="btn btn-primary" type="submit" value="Купить" />
            </div>
        </form>
    </div>
</div>